{
  "name": "otakuflix-bot",
  "version": "1.0.0",
  "description": "Telegram bot for downloading and managing files with Google Drive integration",
  "main": "bot.py",
  "scripts": {
    "start": "python bot.py",
    "dev": "python -m uvicorn bot:app --reload --host 0.0.0.0 --port $PORT",
    "build": "webpack",
    "deploy": "wrangler publish"
  },
  "dependencies": {
    "@cloudflare/wrangler": "^1.19.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "cloudflare",
    "workers",
    "python"
  ]
}
